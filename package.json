{
  "name": "hello-world",
  "version": "1.0.0",
  "description": "Simple Appliation to print Hello World with a button",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "distbuilder": "electron-builder",
    "dist": "npx electron-packager . HelloWorld --platform=win32 --arch=x64 --icon=image/logo.ico --out=dist --overwrite"
  },
  "author": "Yosef Ahmed",
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.yosef.hello-world",
    "productName": "Hello World",
    "icon": "image/logo.ico",
    "win": {
      "target": "nsis"
    }
  }
}
